pipeline {
    agent any

    stages {
        stage('Code Fetch') {
            steps {
                echo 'Code Fetch from GitHub'
                git url:'https://github.com/neerajkarn/JenkinsDemo.git',branch:'Dev'
            }
        }
          stage('Build') {
            steps {
                sh 'docker build -t my-new-website .'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy to container'
                sh 'docker run -d -p 81:81 my-new-website'
            }
        }
    }
}
